<h1>Burger Store!</h1>

<h2>Burgers</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> buger/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Eaten</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
      {{> burger/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name</label>
    <input type="text" id="burg" name="name">
  </div>


  <button type="submit">Add Burger</button>
</form>
